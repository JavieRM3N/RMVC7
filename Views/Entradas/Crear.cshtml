@model CheckerCreateVM

@{
    ViewData["Title"] = "Registrar Entrada";
}

<h1>Registrar entrada</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TipoRegistroId" class="control-label"></label>
                <select asp-for="TipoRegistroId" asp-items="Model?.TiposRegistro" class="form-select">
                    <option>Seleccione su registro</option>
                </select>
                <span asp-validation-for="TipoRegistroId" class="text-danger"></span>
            </div>
            <br />
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="FechaInicio" class="control-label"></label>
                        <input asp-for="FechaInicio" class="form-control datepicker" type="text" />
                        <span asp-validation-for="FechaInicio" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Comentario" class="control-label"></label>
                <textarea asp-for="Comentario" class="form-control"></textarea>
                <span asp-validation-for="Comentario" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <a class="btn btn-dark" asp-action="MyLog">Cancel</a>
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
